<%- include("partials/header") %>

<h1>Home</h1>
<p><%= home_content %>></p>

<% posts.forEach(function(posts) { %>
        <h1><%= posts.title %></h1>
        <!-- <p><%= posts.content %></p> -->
        <% if(posts.content.length > 400) { %>
                <p> 
                        <%= posts.content.substring(0, 399) + "..." %> 
                        <a href="/posts/<%= posts.title %>">Read more</a>
                </p>
        <% } else { %>
                <p> <%= posts.content %> </p>
        <% } %>
<% }); %>

