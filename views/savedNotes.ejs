<%- include("partials/header") %>
<br><br><br>
<a href="/notes">
    <button style="background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: auto">New Note</button>
</a>
<br><br><br>
<h1 style="color: chocolate; margin: auto;">Here are your notes...</h1>
<br>
<% if(notes.length > 0) { %>
    <% notes.forEach(function(notes) { %>
        <h1><%= notes.notesTitle %></h1>
        <p> <%= notes.notesContent %> </p>
        <br>
    <% }); %>
<% } else { %> 
    <h3>No notes created yet !</h3>
<% } %>
